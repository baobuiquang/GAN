#include <stdio.h>
#include <math.h>

#define target 1000

int main()
{
	int a[400], index = 0;
	a[0] = 1;
	for (int i = 1; i < 400; i++)
	{
		a[i] = 0;
	}

	for (int i = 0; i < target; i++)
	{
		int temp = 0;
		for (int u = 0; u <= index; u++)
		{
			a[u] = a[u] * 2 + temp;
			if (a[u] > 9)
			{
				temp = a[u] / 10;
				a[u] = a[u] % 10;
				if (u == index)
				{
					index++;
				}
			}
			else if (a[u] <= 9)
			{
				temp = 0;
			}
		}
	}
	int sum = 0;
	for (int i = 301; i >= 0; i--)
	{
		printf("%d", a[i]);
		sum += a[i];
	}
	printf("\nResult = %d", sum);

	return 0;
}
