#include <stdio.h>
#include <math.h>

int main()
{
	FILE* fptr;
	fptr = fopen("1000digits.txt", "r");

	unsigned long long int max = 0, a1[100], a2[1000];
	int n = 0, index = 0;
	while(!feof(fptr))
	{
		fscanf(fptr, "%llu", &a1[n]);
		n++;
	}

	for (int i = 0; i < n; i++)
	{
		unsigned long long int num = a1[i];
		for (int u = 10; u > 0; u--)
		{
			a2[index] = num / pow(10, u-1);
			num = num - a2[index] * pow(10, u - 1);
			index++;
		}
	}

	for (int i = 0; i < 988; i++)   //i < 1000 -12
	{
		unsigned long long int result = 1;
		for (int u = i; u < i + 13; u++)
		{
			result *= a2[u];
		}
		if (result > max)
		{
			max = result;
		}
	}

	printf("Result = %llu", max);

	fclose(fptr);
	return 0;
}
