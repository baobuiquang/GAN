/*
Best solution:
The sum of all the numbers from 1 to num: sum = num(num+1)/2
The sum of squares: sumOfSquares = (2num + 1)(num + 1)num/6
*/

#include <stdio.h>
#include <math.h>

#define target 100

int sumOfSquares(int num)
{
	int result = 0;
	for (int i = 1; i <= num; i++)
	{
		result += pow(i, 2);
	}
	return result;
}

int squareOfSum(int num)
{
	int result = 0;
	for (int i = 1; i <= num; i++)
	{
		result += i;
	}
	return pow(result, 2);
}

int main()
{
	printf("Result: %d\n", squareOfSum(target) - sumOfSquares(target));
	return 0;
}
