#include <stdio.h>

//Function to get the reversed number
int reverse(int num)
{
	int reversed = 0;
	while (num > 0)
	{
		reversed = reversed*10 + num % 10;
		num /= 10;
	}
	return reversed;
}
//Function to check a number a palindrome or not
bool isPalindrome(int num)
{
	return num == reverse(num);
}

//MAIN FUNCTION
int main()
{
	int maxPalindrome = 0;
	for (int i = 999; i >= 800; i--)
	{
		for (int u = i; u >= 800; u--)
		{
			int num = u * i;
			if ((isPalindrome(num) == true) && (num > maxPalindrome))
			{
				printf("Max palindromic number is %d.\n", num);
				maxPalindrome = num;
			}
		}
	}
	return 0;
}
