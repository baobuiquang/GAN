#include <stdio.h>

int main()
{
	int max = 0, result = 0;
	for (int i = 999999; i >= 999000; i--) //999167, 997823 -> infinite
	{
		int num = i;
		int count = 1; //The start number
		while (num != 1)
		{
			if (num % 2 == 0)
			{
				num = num / 2;
				count++;
			}
			else
			{
				num = num * 3 + 1;
				count++;
			}
		}
		if (count > max)
		{
			max = count;
			result = i;
		}
	}
	printf("Result = %d\nCount = %d\n", result, max);
	return 0;
}
