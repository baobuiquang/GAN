#include <stdio.h>

#define target 20

//Function: Find lcm
long long int lcm(long long int a, long long int b)
{
	long long int max = a * b;
	//Step = max(a,b)
	long long int step = a * (a > b) + b * (a <= b);
	for (long long int i = step; i <= max; i += step)
	{
		if ((i % a == 0) && (i % b == 0))
		{
			return i;
		}
	}
	return -1;
}

//MAIN FUNCTION
int main()
{
	long long int result = 1;
	for (long long int i = 2; i <= target; i++)
	{
		result = lcm(result, i);
	}
	printf("Smallest multiple = %d\n", result);
	return 0;
}
